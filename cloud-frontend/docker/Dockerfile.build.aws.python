ARG BASE_IMAGE
FROM ${BASE_IMAGE}
ARG USER
ENV HOME=/home/${USER}

RUN useradd --uid 1000 ${USER}
WORKDIR ${HOME}
USER ${USER}:${USER}

CMD cd /mnt/function\
    && pip3 -q install -r requirements.txt -t .packages\
    && cd .packages\
    && zip -qur ../${APP}.zip *\
    && cd ..\
    && rm -rf .packages
